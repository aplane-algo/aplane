[Unit]
Description=apsignerd signing server for /var/lib/aplane
After=network.target

[Service]
ExecStart=/usr/local/bin/apsignerd
User=aplane
Group=aplane
Environment=APSIGNER_DATA=/var/lib/aplane
LoadCredentialEncrypted=aplane-passphrase:/var/lib/aplane/passphrase.cred
Restart=always
RestartSec=5s
ProtectSystem=full
ProtectHome=true

[Install]
WantedBy=multi-user.target
