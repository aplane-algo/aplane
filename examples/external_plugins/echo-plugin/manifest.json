{
  "name": "echo-plugin",
  "version": "1.0.0",
  "description": "A simple echo plugin that demonstrates the external plugin system",
  "author": "aPlane Shell Team",
  "homepage": "https://github.com/apshell/echo-plugin",
  "executable": "./echo-plugin",
  "commands": [
    {
      "name": "echo",
      "description": "Echo back the provided message",
      "usage": "echo <message>",
      "examples": ["echo hello world"],
      "category": "utility"
    }
  ],
  "functions": [
    {
      "name": "echoMessage",
      "description": "Echo back a message (for testing)",
      "params": [
        {"name": "message", "type": "string", "description": "Message to echo"}
      ],
      "returns": "{message: string}",
      "command": ["$message"]
    }
  ],

  "networks": ["testnet", "mainnet", "betanet"],
  "timeout": 10,
  "protocol_version": "1.0"
}